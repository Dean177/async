{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2015"],
    "module": "commonjs",
    "noEmitOnError": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": true,
    "target": "es5",
    "jsx": "react",
    "paths": {
      "*": ["packages/*/dist"]
    },
    "pretty": true
  }
}