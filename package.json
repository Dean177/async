{
  "dependencies": {
    "husky": "1.3.1",
    "jsdom": "13.2.0",
    "lerna": "3.11.0",
    "lint-staged": "8.0.4",
    "prettier": "1.16.4",
    "rimraf": "2.6.2",
    "tslint": "5.12.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-react": "3.6.0"
  },
  "license": "MIT",
  "prettier": {
    "parser": "typescript",
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "prettier --parser typescript --write",
      "git add"
    ]
  },
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "(cd packages/abortable && yarn build) && (cd packages/abortable-networking && yarn build) && (cd packages/with-async && yarn build)",
    "build:docs": "rm -rf ./docs && cd packages/documentation && yarn && yarn build && mv ./build ../../docs",
    "clean": "rimraf packages/**/dist docs",
    "lerna": "lerna",
    "lint": "tslint packages/*/src/**/*.{ts,tsx}",
    "prettier": "prettier --write \"packages/*/src/**/*.{ts,tsx}\"",
    "prepublishOnly": "lerna run prepublishOnly",
    "test": "lerna run test",
    "typecheck": "lerna run typecheck"
  },
  "workspaces": [
    "packages/*"
  ]
}
