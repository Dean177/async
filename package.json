{
  "dependencies": {
    "gh-pages": "2.2.0",
    "husky": "4.2.0",
    "jsdom": "16.0.1",
    "lerna": "3.20.2",
    "lint-staged": "10.0.2",
    "prettier": "1.19.1",
    "rimraf": "3.0.0",
    "tslint": "6.0.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-react": "4.2.0"
  },
  "license": "MIT",
  "prettier": {
    "parser": "typescript",
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "prettier --parser typescript --write"
    ]
  },
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "(cd packages/abortable && yarn build) && (cd packages/abortable-networking && yarn build) && (cd packages/with-async && yarn build)",
    "build:demo": "rm -rf ./demo && cd packages/with-async-demo && yarn && yarn build && mv ./build ../../demo",
    "clean": "rimraf packages/**/dist packages/**/node_modules demo node_modules",
    "deploy": "gh-pages -d demo",
    "lint": "tslint packages/*/src/**/*.{ts,tsx}",
    "prettier": "prettier --write \"packages/*/src/**/*.{ts,tsx}\"",
    "prepublishOnly": "lerna run prepublishOnly",
    "test": "lerna run test",
    "typecheck": "lerna run typecheck"
  },
  "workspaces": [
    "packages/*"
  ]
}
